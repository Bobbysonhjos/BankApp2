@page
@model BankStartWeb.Pages.Customers.Accounts.TransferModel
@{
    ViewData["Title"] = "Transfer";
}
<form method="post"> 
    <div asp-validation-summary="All"></div>
    <div class="mb-3">

        <label asp-for="Amount" class="form-label">Amount</label>
        <input asp-for="Amount" class="form-control" aria-describedby="emailHelp">
        <span asp-validation-for="Amount"></span>
    </div>
    <div class="mb-3">

        <label asp-for="ReceiverId" class="form-label">ReceiverId</label>
        <input asp-for="ReceiverId" class="form-control" aria-describedby="emailHelp">
        <span asp-validation-for="ReceiverId"></span>
    </div>

    <button type="submit" class="btn btn-primary bg-success">Submit</button>
</form>
